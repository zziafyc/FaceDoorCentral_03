<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/register_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bglight"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/common_app_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="人脸注册界面"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/online_img"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/gg"/>

    <LinearLayout
        android:id="@+id/online_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/online_number"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:background="@drawable/radius_white"
            android:gravity="center"
            android:hint="6位工号"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#7FFFD4"
            android:textSize="35sp">
        </EditText>

        <EditText
            android:id="@+id/online_name"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginLeft="260dp"
            android:background="@drawable/radius_white"
            android:gravity="center"
            android:hint="姓名"
            android:maxLength="8"
            android:singleLine="true"
            android:textColor="#7FFFD4"
            android:textSize="35sp">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/online_pick"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/btn"
            android:text="选图"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/online_camera"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btn"
            android:text="拍照"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/online_reg"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/btn"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/online_delete"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/btn"
            android:text="删除"
            android:textColor="#FFFFFF"
            android:textSize="35sp"/>
    </LinearLayout>

</LinearLayout>